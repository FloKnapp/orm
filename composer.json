{
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "mockery/mockery": "^0.9.6",
    "squizlabs/php_codesniffer": "^2.7"
  },
  "autoload": {
    "psr-4": {
      "ORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ORM\\Test\\": "tests/"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 tests"
  }
}
