#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

$logo = <<<LOGO
  _    __ _         _   __             
 | |_ / _| |___ _ _(_) / /__ _ _ _ __  
 |  _|  _| / _ \ '_| |/ / _ \ '_| '  \ 
  \__|_| |_\___/_| |_/_/\___/_| |_|_|_|
  
LOGO;

\ORM\Console\Output::writeLine($logo, 'notice');

try {
    $argumentParser = new \ORM\Console\ArgumentParser($argv);
} catch (\Exception $e) {
    \ORM\Console\Output::writeLine('Error: ' . $e->getMessage(), 'error');
}

\ORM\Console\Output::writeEmptyLine();